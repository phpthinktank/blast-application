{
  "name": "blast/application",
  "description": "The fast application runner",
  "minimum-stability": "dev",
  "license": "GPL",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "mjls@web.de"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "league/container": "~2.0",
    "league/event": "~2.0",
    "psr/http-message": "~1.0",
    "symfony/config": "~2",
    "symfony/filesystem": "~2",
    "symfony/http-foundation": "~2",
    "symfony/http-kernel": "~2",
    "symfony/psr-http-message-bridge": "*",
    "puli/repository": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*"
  },
  "autoload": {
    "psr-4": {
      "Blast\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blast\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
