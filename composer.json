{
  "name": "blast/application",
  "description": "The fast application runner",
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Bunge",
      "email": "mjls@web.de"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "symfony/http-foundation": "~2",
    "symfony/http-kernel": "~2"
  },
  "require-dev": {
    "league/container": "~2.0",
    "phpunit/phpunit": "4.8.*"
  },
  "autoload": {
    "psr-4": {
      "Blast\\Application\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Blast\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "cd vendor/phpunit/phpunit",
      "phpunit --configuration phpunit.xml"
    ]
  }
}
